/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["assets/*"],
      "@pages/*": ["app/pages/*"],
      "@shared/*": ["app/shared/*"],

      "@abstract-classes/*": ["app/shared/abstract-classes/*"],
      "@components/*": ["app/shared/components/*"],
      "@directives/*": ["app/shared/directives/*"],
      "@helpers/*": ["app/shared/helpers/*"],
      "@interfaces/*": ["app/shared/interfaces/*"],
      "@models/*": ["app/shared/models/*"],
      "@resolvers/*": ["app/shared/resolvers/*"],
      "@services/*": ["app/shared/services/*"],
      "@validators/*": ["app/shared/validators/*"]
    },
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": false,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "module": "ES2022",
    "useDefineForClassFields": false,
    "lib": ["ES2022", "dom"]
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "strictTemplates": true
  }
}
